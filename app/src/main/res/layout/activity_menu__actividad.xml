<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_blue_grey_900"
    tools:context=".Menu_Actividad">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="176dp"
        android:text="CONTEO"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnConteo"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_above="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-176dp"
        android:layout_marginStart="57dp"
        android:background="@drawable/icono_conteo"
        android:gravity="center"
        android:onClick="actividad_conteo_practica"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/darker_gray" />

    <Button
        android:id="@+id/btnConceptosBasicos"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_above="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="-176dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/icono_conceptos_basicos"
        android:gravity="center"
        android:onClick="actividad_conceptos_basicos"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnConceptosBasicos"
        android:layout_alignTop="@+id/textView7"
        android:text="CONCEPTOS"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@color/md_deep_orange_A400"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView12"
        android:layout_below="@+id/textView7"
        android:text="BÁSICOS"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@color/md_deep_orange_A400"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnNumerosMayas"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignStart="@+id/btnConceptosBasicos"
        android:layout_alignTop="@+id/btnOperaciones"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/icono_fig_geometricas"
        android:gravity="center"
        android:onClick="actividad_figuras_geometricas"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btnNumerosMayas"
        android:layout_marginEnd="72dp"
        android:text="FIGURAS"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@color/md_cyan_600"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnConceptosBasicos"
        android:layout_below="@+id/textView12"
        android:text="GEOMÉTRICAS"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@color/md_cyan_600"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnOperaciones"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="139dp"
        android:layout_marginStart="47dp"
        android:background="@drawable/icono_suma"
        android:gravity="center"
        android:onClick="actividad_operaciones"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/btnNumerosMayas"
        android:text="SUMA"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@color/md_light_green_A400"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="MENU PRINCIPAL"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_above="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:background="@drawable/icono_home"
        android:foregroundGravity="center"
        android:gravity="center"
        android:onClick="menu"
        android:text="Button" />

</RelativeLayout>