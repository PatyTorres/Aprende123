<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_deep_purple_100"
    tools:context=".Menu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:context=".MainActivity">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnEnseñanza"
                    android:layout_width="224dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@color/md_amber_400"
                    android:gravity="center"
                    android:onClick="menu_ensenanza"
                    android:text="ENSEÑANZA"
                    android:textColor="@android:color/background_light"
                    android:textColorLink="@android:color/darker_gray" />

                <Button
                    android:id="@+id/btnActividades"
                    android:layout_width="224dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@color/md_orange_800"
                    android:gravity="center"
                    android:onClick="menu_actividad"
                    android:text="ACTIVIDADES"
                    android:textColor="@android:color/background_light" />

                <Button
                    android:id="@+id/btnEvaluacion"
                    android:layout_width="224dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@color/md_cyan_A200"
                    android:gravity="center"
                    android:onClick="menu_evaluaciones"
                    android:text="EVALUACIÓN"
                    android:textColor="@android:color/background_light" />

                <Button
                    android:id="@+id/btnOpciones"
                    android:layout_width="224dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@color/md_deep_purple_A700"
                    android:gravity="center"
                    android:onClick="menu_opciones"
                    android:text="OPCIONES"
                    android:textColor="@android:color/background_light" />

                <Button
                    android:id="@+id/btnAyuda"
                    android:layout_width="224dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:onClick="ayuda"
                    android:text="AYUDA"
                    android:textColor="@android:color/background_light" />

                <Button
                    android:id="@+id/btnAcercaDe"
                    android:layout_width="224dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@color/md_deep_purple_300"
                    android:gravity="center"
                    android:onClick="a_cerca_de"
                    android:text="ACERCA DE"
                    android:textColor="@android:color/background_light" />

                <Button
                    android:id="@+id/exit_button"
                    android:layout_width="224dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@color/md_light_green_A400"
                    android:gravity="center"
                    android:text="SALIR"
                    android:textColor="@android:color/background_light" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="265dp"
                    app:srcCompat="@drawable/home" />

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

</RelativeLayout>