<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_black_1000_50"
    tools:context=".Menu_Opciones">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/opciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="CONTROL DE ESTUDIANTES"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textColor="@color/md_blue_900" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/opciones" />

            <Button
                android:id="@+id/visualizacion"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@color/md_green_600"
                android:onClick="ingresar_datos_estudiante"
                android:text="INSERTAR DATOS DEL ESTUDIANTE"
                android:textColor="@color/md_cyan_50" />

            <Button
                android:id="@+id/ModificarDatos"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="#ff00bb"
                android:onClick="modificar_datos"
                android:text="MODIFICAR DATOS DEL ESTUDIANTE"
                android:textColor="@color/md_cyan_50" />

            <Button
                android:id="@+id/ConsultarDatos"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@color/md_amber_A700"
                android:onClick="consultar_datos"
                android:text="CONSULTAR DATOS DEL ESTUDIANTE"
                android:textColor="@color/md_cyan_50" />

            <Button
                android:id="@+id/baja"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@color/md_deep_orange_500"
                android:onClick="datos_eliminar"
                android:text="DARSE DE BAJA"
                android:textColor="@color/md_cyan_50" />

            <Button
                android:id="@+id/atras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginBottom="158dp"
                android:layout_marginLeft="140dp"
                android:background="@drawable/icono_home"
                android:onClick="menu"
                android:textColor="@color/md_cyan_50" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>