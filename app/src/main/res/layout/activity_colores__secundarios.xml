<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fondo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Colores_Secundarios">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="187dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                app:srcCompat="@drawable/colores_secundarios" />

            <Button
                android:id="@+id/verde"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:onClick="verde"
                android:text="AZUL + AMARILLO = VERDE" />

            <Button
                android:id="@+id/violeta"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:onClick="violeta"
                android:text="AZUL + ROJO = VIOLETA" />

            <Button
                android:id="@+id/naranja"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:onClick="naranja"
                android:text="ROJO + AMARILLO = NARANJA" />

            <Button
                android:id="@+id/btnSiguienteCT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginBottom="100dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:onClick="colores_terciarios"
                android:text="Siguiente" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>