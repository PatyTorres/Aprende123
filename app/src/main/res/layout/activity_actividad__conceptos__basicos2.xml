<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:padding="16dp"
    tools:context=".Actividad_Conceptos_Basicos2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/md_blue_grey_50"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:background="@color/md_amber_A400"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="ARRIBA"
                android:textColor="@android:color/background_light"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_bottom"
                android:layout_gravity="center"
                android:layout_margin="25dp"
                android:background="@color/md_green_A200"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="IZQUIERDO"
                android:textColor="@android:color/background_light"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_margin="25dp"
                android:layout_toEndOf="@+id/btn_top"
                android:background="@color/md_deep_orange_900"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="CENTRO"
                android:textColor="@android:color/background_light"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/btn_left"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_margin="25dp"
                android:background="@color/md_cyan_500"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="DERECHO"
                android:textColor="@android:color/background_light"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_top"
                android:layout_gravity="center"
                android:layout_margin="25dp"
                android:background="@android:color/holo_red_light"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="ABAJO"
                android:textColor="@android:color/background_light"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:background="@android:color/holo_green_light"
                android:onClick="menu_actividad"
                android:text="ACTIVIDAD TERMINADA"
                android:textColor="@color/md_amber_100" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>