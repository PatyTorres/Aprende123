<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_blue_grey_100"
    android:padding="10dp"
    tools:context=".Actividad_Figuras_Geometricas">

    <Button
        android:id="@+id/btn"
        android:layout_width="135dp"
        android:layout_height="71dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@color/md_blue_grey_900"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="ANIMAR"
        android:textColor="@color/md_blue_grey_50" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="270dp"
        android:layout_height="266dp"
        android:layout_centerInParent="true"
        android:width="100dp"
        android:height="100dp"
        android:background="@drawable/rounded_bg"
        android:elevation="5dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="CÍRCULO"
        android:textColor="@color/md_amber_500"
        android:textSize="24sp"
        android:translationZ="5dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@color/md_blue_grey_900"
        android:onClick="menu_actividad"
        android:text="FINALIZAR"
        android:textColor="@color/md_blue_grey_50" />

</RelativeLayout>